---
import Layout from "../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import sample from "../assets/sample.png";
import Team from "../components/team.astro";
import Marquee from "../components/marquee.astro";
import VideoTimer from "../components/videoTimer.astro";
import Footer from "../components/footer.astro";
import { getAboutData, getPreviewClips, getSiteSettings } from "../sanity/api";

const previewClipData = await getPreviewClips();
const data = await getAboutData();
const settingsData = await getSiteSettings();

const isIndexPage = Astro.url.pathname == "/";
---

<Layout data={settingsData}>
  <div class="canvas__wrapper">
    <div class="blur">
      <div class="circle circle-1"></div>
      <div class="circle circle-2"></div>
      <div class="circle circle-3"></div>
      <!-- <canvas id="gradient-canvas" data-js-darken-top></canvas> -->
    </div>
  </div>
  <div class="about-hero">
    <div class="about-images__wrapper">
      <div class="mobile-about-marquee" id="aboutHeroMarquee">
        {
          data.heroImageArray.map((img) => {
            return (
              <Image
                class="about-hero-image"
                src={img.imageSrc}
                widths={[300, 430, 553]}
                sizes={`(max-width: 525px) 300px, (max-width: 768px) 430px, 553px`}
                width="553"
                height="287"
                alt={
                  img.alt != null
                    ? img.alt
                    : "No descriptive text was entered for this image, sorry!"
                }
              />
            );
          })
        }
      </div>
      <div class="about-images__col" id="about-col1">
        {
          data.heroImageArray.slice(0, 3).map((img) => {
            return (
              <Image
                class="about-hero-image"
                src={img.imageSrc}
                widths={[300, 430, 553]}
                sizes={`(max-width: 525px) 300px, (max-width: 768px) 430px, 553px`}
                width="553"
                height="287"
                alt={
                  img.alt != null
                    ? img.alt
                    : "No descriptive text was entered for this image, sorry!"
                }
              />
            );
          })
        }
      </div>
      <div class="about-images__col" id="about-col2">
        {
          data.heroImageArray.slice(3, 6).map((img) => {
            return (
              <Image
                class="about-hero-image"
                src={img.imageSrc}
                widths={[300, 430, 553]}
                sizes={`(max-width: 525px) 300px, (max-width: 768px) 430px, 553px`}
                width="553"
                height="287"
                alt={
                  img.alt != null
                    ? img.alt
                    : "No descriptive text was entered for this image, sorry!"
                }
              />
            );
          })
        }
      </div>
      <div class="about-images__col" id="about-col3">
        {
          data.heroImageArray.slice(6, 9).map((img) => {
            return (
              <Image
                class="about-hero-image"
                src={img.imageSrc}
                widths={[300, 430, 553]}
                sizes={`(max-width: 525px) 300px, (max-width: 768px) 430px, 553px`}
                width="553"
                height="287"
                alt={
                  img.alt != null
                    ? img.alt
                    : "No descriptive text was entered for this image, sorry!"
                }
              />
            );
          })
        }
      </div>
    </div>
    <h2 class="about-bio">
      {data.description}
    </h2>
  </div>
  {
    data.teamArray != null && data.expertiseArray != null && (
      <Team
        data={data.teamArray}
        expertiseData={data.expertiseArray}
        logoVideo={settingsData.logoVideo}
        email={settingsData.email}
      />
    )
  }
  {
    data.clientLogoImageArray != null && (
      <Marquee logoData={data.clientLogoImageArray} />
    )
  }
  <div class="sticky__container">
    <div class="sticky-gradient"></div>
    <div class="about-video__container">
      {
        previewClipData.projects.map((video, i) => {
          return (
            <a
              href={`/projects/${video.slug}`}
              class="hero-video hover-area"
              id="timer-video-parent"
            >
              <video
                preload="metadata"
                autoplay="true"
                loop="true"
                muted="true"
                id="timer-video"
              >
                <source src={video.previewUrl} type="video/mp4" />
                Your browser does not support the video tag.
              </video>
            </a>
          );
        })
      }
      <VideoTimer data={previewClipData.projects} />
      {
        !isIndexPage && (
          <a
            href="/projects"
            class="link hero-projects-link"
            data-value="View all projects"
          >
            <p>View all projects</p>
          </a>
        )
      }
    </div>
  </div>
  <Footer data={settingsData} />
</Layout>

<style>
  .about-images__wrapper {
    position: relative;
    z-index: 10;
    margin: 0 auto;
    margin-top: -20vh;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .about-images__col {
    flex: 1;
    margin: 0 0.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;

    & img {
      margin-top: 1rem;
      width: 100%;
      aspect-ratio: 553/287;
      height: auto;
      min-height: 100px;
      border-radius: 20px;
      object-fit: cover;
    }
  }
  .about-hero {
    overflow-x: hidden;
    height: auto;
    position: relative;
    /* height: 145vh; */
  }
  .about-bio {
    position: relative;
    z-index: 100;
    width: var(--inner-width);
    margin: 8rem auto;
    color: white;
  }
  .canvas__wrapper {
    overflow: hidden;
    position: absolute;
    z-index: 0;
    top: 0;
    left: 0;
    height: 150vh;
    width: 100%;
  }
  .blur {
    width: 100%;
    height: 100%;
    overflow: hidden;
    filter: blur(250px);
  }

  .circle {
    position: absolute;
    top: 30%;
    left: 50%;
    transform: translate(-50%, -50%) rotate(0);
    width: 90vw;
    height: 45vw;
    border-radius: 999999px;
  }
  .circle-1 {
    animation: rotate360 12s linear infinite;
    background: linear-gradient(
      191deg,
      #9aeadd 8.23%,
      rgba(120, 124, 123, 0) 64.05%
    );
  }
  .circle-2 {
    animation: rotate360 15s linear infinite reverse;
    background: linear-gradient(
      193deg,
      #ba00a7 9.57%,
      rgba(21, 94, 137, 0) 57.59%
    );
  }
  .circle-3 {
    animation: rotate360 20s linear infinite;
    background: linear-gradient(
      193deg,
      #155e89 9.57%,
      rgba(21, 94, 137, 0) 57.59%
    );
  }
  #about-col1,
  #about-col2,
  #about-col3 {
    transform: translateY(-150vh);
    opacity: 0;
  }

  .sticky__container {
    position: relative;
    display: unset;
    overflow-x: hidden;
    height: 100%;
  }
  .sticky-gradient {
    z-index: 11;
    position: sticky;
    top: -1px;
    left: 0;
    width: 100%;
    height: 200px;
    background: linear-gradient(
      0deg,
      rgba(0, 0, 0, 0) 21.56%,
      rgba(0, 0, 0, 0.25) 48.54%,
      #000 100%
    );
  }
  .about-video__container {
    transform: translateY(-200px);
    aspect-ratio: 16/6;
    z-index: 10;
    width: 100%;
    height: auto;
    overflow: hidden;
    position: relative;
  }
  .hero-projects-link {
    position: absolute;
    bottom: 3rem;
    right: 0rem;
    z-index: 10;
    margin-right: 3rem;
  }
  .hover-area {
    overflow: hidden;
  }
  .hero-video {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
    cursor: none;
    video {
      height: 100%;
      width: 100%;
      object-fit: cover;
    }
  }

  .mobile-about-marquee {
    display: none;
  }
  @media (max-width: 576px) {
    .hero-projects-link {
      bottom: 1rem;
      margin-right: 1rem;
    }
    .sticky-gradient {
      display: none;
    }
    .mobile-about-marquee {
      display: block;
    }
    .about-images__col {
      display: none;
    }
    .about-images__wrapper {
      margin-top: 0;
    }
    .about-hero-image {
      border-radius: 0;
      aspect-ratio: 125/245;
      height: 245px;
      width: auto;
      object-fit: cover;
      margin-right: 0.25rem;
    }
    .about-video__container {
      aspect-ratio: 16/9;
    }
    .about-bio {
      margin-top: 2rem;
      margin-bottom: 14rem;
    }
  }
</style>

<script>
  // import { Gradient } from "../components/utils/gradient.js";

  // Create your instance
  // const gradient = new Gradient();

  // Call `initGradient` with the selector to your canvas
  // gradient.initGradient("#gradient-canvas");

  import { animate } from "motion";

  const col1 = document.getElementById("about-col1");
  const col2 = document.getElementById("about-col2");
  const col3 = document.getElementById("about-col3");

  if (window.innerWidth > 576) {
    animate(
      col1,
      {
        transform: "translateY(-7vh)",
        opacity: 1,
      },
      { duration: 2.4, delay: 0.25, easing: [0.35, 0.5, 0, 1] }
    );
    animate(
      col2,
      {
        transform: "translateY(0px)",
        opacity: 1,
      },
      { duration: 2.5, delay: 0.5, easing: [0.35, 0.5, 0, 1] }
    );
    animate(
      col3,
      {
        transform: "translateY(-5vh)",
        opacity: 1,
      },
      { duration: 2.7, delay: 0.75, easing: [0.35, 0.5, 0, 1] }
    );
  }
</script>

<script>
  import marquee from "https://cdn.jsdelivr.net/npm/vanilla-marquee/dist/vanilla-marquee.js";

  new marquee(document.getElementById("aboutHeroMarquee"), {
    gap: 16 * 0.25,
    duplicated: true,
    startVisible: true,
    speed: 10,
  });
</script>
