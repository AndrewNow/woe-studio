---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/hero.astro";
import { getPreviewClips } from "../sanity/api";
const previewData = await getPreviewClips();
---

<Layout title="Welcome to Astro.">
  <div class="landing-loader" id="loaderWrapper">
    <video
      class="landing-loader-video"
      id="loaderVideo"
      preload="metadata"
      autoplay
      muted="true"
      playsinline
    >
      <source
        src="https://woe-branding-assets.s3.us-east-2.amazonaws.com/%5BCompressed%5D+W+Logo+-+Opening+Ani.mp4"
        type="video/mp4"
        media="(min-width: 992px)"
      />
      <source
        src="https://woe-branding-assets.s3.us-east-2.amazonaws.com/W+Particle+-+Landing+Page+Mobile.mp4"
        type="video/mp4"
      />
      Your browser does not support the video tag.
    </video>
  </div>
  <Hero data={previewData} />
</Layout>
<style>
  .hero {
    color: white;
  }
  .landing-loader {
    position: absolute;
    z-index: 999999;
    top: 0;
    left: 0;
    width: 100%;
    height: 100svh;
    overflow: hidden;
  }
  .landing-loader-video {
    height: 100%;
    width: 100%;
    object-fit: cover;
    opacity: 0;
    transition: all 0.25s ease;
  }
</style>
<script>
  import { animate } from "motion";
  const loaderVideo = document.getElementById("loaderVideo");
  const loaderWrapper = document.getElementById("loaderWrapper");
  const videoContainer = document.getElementById("hero-video-container");
  const timerItems = document.getElementById("animateTimerIn");

  const userHasVisited = sessionStorage.getItem("visited");

  if (userHasVisited) {
    loaderWrapper.style.display = "none";
    animate(
      videoContainer,
      {
        clipPath: "inset(0% 0% 0% 0%)",
      },
      {
        duration: 1.6,
        easing: [0.85, 0, 0.15, 1],
      }
    );
    animate(
      timerItems,
      {
        opacity: 1,
      },
      {
        delay: 0.5,
        duration: 1.6,
      }
    );
  } else {
    loaderVideo.style.opacity = "1";
    loaderVideo.addEventListener("ended", handleVideoEnd, false);
  }

  // loaderVideo.addEventListener("ended", handleVideoEnd, false);

  function handleVideoEnd(e) {
    animate(loaderVideo, {
      opacity: 0,
    }).finished.then(() => {
      loaderWrapper.style.display = "none";
      animate(
        videoContainer,
        {
          clipPath: "inset(0% 0% 0% 0%)",
        },
        {
          duration: 1.6,
          easing: [0.85, 0, 0.15, 1],
        }
      );
      animate(
        timerItems,
        {
          opacity: 1,
        },
        {
          delay: 0.5,
          duration: 1.6,
        }
      );
    });

    sessionStorage.setItem("visited", "true");
  }
</script>
