---
import { Image } from "astro:assets";
// import Image from "astro/components/Image.astro";
import clover from "../assets/woe-clover.png";
import Logotype from "./logotype.astro";

const { data } = Astro.props;

const isHome = Astro.url.pathname == "/";

const pages = [
  {
    title: "Home",
    route: "/",
  },
  {
    title: "Projects",
    route: "/projects",
  },
  {
    title: "About",
    route: "/about",
  },
];
---

<nav class="nav" id="navWrapper">
  <a href="/" class="logo__wrapper">
    <Image
      src={clover}
      alt="Clover logo"
      width="40"
      height="40"
      loading="eager"
      class="clover"
    />
    {
      !isHome && (
        <div class="logotype">
          <Logotype />
        </div>
      )
    }
  </a>
  <span class="page-link__wrapper">
    {
      pages
        .slice(1)
        .reverse()
        .map((page) => (
          <a
            href={`${page.route}`}
            class="page-link link"
            data-content={page.title}
          >
            <p>{page.title}</p>
          </a>
        ))
    }
  </span>
  <div class="menu-button" id="menu-button" aria-label="Menu open button">
    Menu
  </div>
</nav>
<div id="mobileNav">
  <div class="mobile-nav-video">
    <video autoplay muted loop playsinline>
      <source
        preload="metadata"
        type="video/mp4"
        src="https://woe-branding-assets.s3.us-east-2.amazonaws.com/mobile-menu/Mobile+-+Drop+Menu+%5BSolid%5D.mp4"
      />
      Your browser does not support the video tag.
    </video>
  </div>
  <div class="mobile-nav-content">
    <span></span>
    <ul class="page-link__wrapper-mobile">
      {
        pages.map((page) => (
          <li>
            <a
              href={`${page.route}`}
              class={`page-link link ${Astro.url.pathname == page.route && "page-active"}`}
            >
              {page.title}
            </a>
            <br />
            <br />
          </li>
        ))
      }
    </ul>
    <div class="mobile-nav-contact">
      <div class="mobile-contact">
        <div class="mobile-contact-email">
          {
            data.email ? (
              <>
                <h4>Work with WOE</h4>
                <a href={`mailto:${data.email}`}>
                  <h4>{data.email}</h4>
                </a>
              </>
            ) : (
              <>
                <h4>Work with WOE</h4>
                <a href="mailto:info@woestudio.co">
                  <h4>info@woestudio.co</h4>{" "}
                </a>
              </>
            )
          }
        </div>
        {
          data.instagram && (
            <div class="mobile-contact-item">
              <svg
                width="19"
                height="18"
                viewBox="0 0 19 18"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path d="M1 0V13.2191H18" stroke="#EFEDED" />
                <path
                  d="M14.9082 9.44238L17.9991 13.2212L14.9082 17.0001"
                  stroke="#EFEDED"
                />
              </svg>
              <a href={data.instagram} rel="noreferrer" target="_blank">
                <h4>Instagram</h4>
              </a>
            </div>
          )
        }
        {
          data.tiktok && (
            <div class="mobile-contact-item">
              <svg
                width="19"
                height="18"
                viewBox="0 0 19 18"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path d="M1 0V13.2191H18" stroke="#EFEDED" />
                <path
                  d="M14.9082 9.44238L17.9991 13.2212L14.9082 17.0001"
                  stroke="#EFEDED"
                />
              </svg>

              <a href={data.tiktok} rel="noreferrer" target="_blank">
                <h4>Tik Tok</h4>
              </a>
            </div>
          )
        }
      </div>
    </div>
  </div>
</div>

<style is:global lang="scss">
  .logo__wrapper {
    display: flex;
    align-items: center;
  }
  .logotype {
    width: 220px;
    margin-left: 1rem;
  }

  .nav {
    position: fixed;
    top: 3rem;
    left: 50%;
    transform: translateX(-50%);
    width: var(--inner-width);
    margin: 0 auto;
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .page-link__wrapper {
    display: flex;
    justify-content: space-between;
    width: 185px;
  }
  .page-link {
    margin: 0;
    display: block;
    color: var(--white);
    text-decoration: none;
  }
  .page-active {
    border-bottom: 1px solid var(--white);
  }
  .page-link:last-child {
    margin-right: 0.5rem;
  }

  .mobile-nav-content {
    z-index: 1;
    position: relative;
    padding: 2rem;
    height: calc(100% - 2rem * 2);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .page-link__wrapper-mobile {
  }
  .menu-button {
    display: none;
    user-select: none;
    cursor: pointer;
    text-transform: uppercase;
  }
  .mobile-contact {
    color: var(--white);
  }
  .mobile-contact-email {
    margin-bottom: 2rem;
    color: rgba(var(--rgb-white), 1);
    & a {
      text-decoration: underline;
      color: rgba(var(--rgb-white), 0.5);
    }
  }
  .mobile-contact-item {
    margin-bottom: 1rem;
    display: flex;
    a {
      text-decoration: none;
      color: rgba(var(--rgb-white), 1);
    }
    & svg {
      margin-right: 1rem;
      margin-top: -0.25rem;
    }
  }
  .mobile-nav-video {
    display: none;
  }
  #mobileNav {
    display: none;
  }
  @media (max-width: 992px) {
    #mobileNav {
      position: fixed;
      top: 0;
      left: 0;
      width: 100svw;
      height: 100dvh;
      /* background-color: #1762e3cb; */
      /* backdrop-filter: blur(20px) saturate(110%) brightness(110%); */
      color: #fff;
      display: none;
      z-index: 1000;
      opacity: 0;
      transition: 0.5s all ease;
    }
    #mobileNav.open {
      display: block;
      opacity: 1;
    }
    .logotype {
      width: 148px;
    }
    .clover {
      width: 23px;
      height: 23px;
    }

    .page-link__wrapper {
      display: none;
    }
    .nav {
      top: 1.65rem;
    }
    .page-link {
      margin: 0;
    }
    .menu-button {
      display: block;
      color: white;
      z-index: 1001;
      text-shadow: 0px 0px 2.3px #efeded;
      text-decoration: underline;
    }
    #mobileNav ul {
      list-style-type: none;
      padding: 0;
    }
    .mobile-nav-video {
      transition: 0.5s all ease;
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100dvh;
      z-index: 0;

      & video {
        object-fit: cover;
        width: 100%;
        height: 100%;
      }
    }

    .page-link {
      font-size: 48px;
      display: inline;
      font-family: "n27-light";
    }
  }
</style>

<script>
  import { animate, inView } from "motion";

  document.addEventListener("astro:page-load", function () {
    const nav = document.getElementById("mobileNav");
    const body = document.body;
    const navWrapper = document.getElementById("navWrapper");
    const episodePlayer = document.getElementById("episodePlayer");

    const toggleNav = () => {
      if (nav.classList.contains("open")) {
        nav.classList.remove("open");
        body.classList.remove("nav-open");
        setTimeout(() => {
          if (!nav.classList.contains("open")) {
            nav.style.display = "none";
          }
        }, 500); // Match the transition duration
      } else {
        nav.style.display = "block";
        setTimeout(() => {
          nav.classList.add("open");
          body.classList.add("nav-open");
        }, 10); // Slight delay to trigger the transition
      }
    };

    document.getElementById("menu-button").addEventListener("click", toggleNav);

    inView(
      episodePlayer,
      () => {
        animate(navWrapper, {
          opacity: 0,
        });

        return () => {
          animate(navWrapper, {
            opacity: 1,
          });
        };
      },
      {
        amount: 0.8,
      }
    );
  });
</script>
