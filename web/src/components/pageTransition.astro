<div id="pageLoadAnimation"></div>

<style is:global>
  #pageLoadAnimation {
    z-index: 99999;
    clip-path: inset(0% 0% 0% 0%);
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--black);
  }
</style>

<script>
  import { animate } from "motion";
  const loader = document.getElementById("pageLoadAnimation");
  document.body.style.overflow = "hidden";

  animate(
    loader,
    {
      clipPath: "inset(0% 0% 100% 0%)",
    },
    {
      duration: 1.6,
      delay: 0,
      easing: [0.85, 0, 0.15, 1],
    }
  );

  setTimeout(() => {
    document.body.style.overflow = "";
  }, 800);
</script>
