---
import Logotype from "./logotype.astro";
import PortableText from "./utils/portableText.astro";

const { data } = Astro.props;
---

<footer class="footer__wrapper">
  <div class="footer-content">
    <div class="footer-content-title">
      <div class="footer__flex wrap-contact">
        <div class="footer-contact">
          {
            data.email && (
              <div class="footer-contact-email">
                <h4>Work with WOE</h4>
                <a href={`mailto:${data.email}`}>
                  <h4>{data.email}</h4>
                </a>
              </div>
            )
          }
          {
            data.instagram && (
              <div class="footer-contact-item">
                <svg
                  width="19"
                  height="18"
                  viewBox="0 0 19 18"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path d="M1 0V13.2191H18" stroke="#EFEDED" />
                  <path
                    d="M14.9082 9.44238L17.9991 13.2212L14.9082 17.0001"
                    stroke="#EFEDED"
                  />
                </svg>

                <a href={data.instagram} target="_blank" rel="noreferrer">
                  <h4>Instagram</h4>
                </a>
              </div>
            )
          }
          {
            data.tiktok && (
              <div class="footer-contact-item">
                <svg
                  width="19"
                  height="18"
                  viewBox="0 0 19 18"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path d="M1 0V13.2191H18" stroke="#EFEDED" />
                  <path
                    d="M14.9082 9.44238L17.9991 13.2212L14.9082 17.0001"
                    stroke="#EFEDED"
                  />
                </svg>
                <a href={data.tikok} target="_blank" rel="noreferrer">
                  <h4>TikTok</h4>
                </a>
              </div>
            )
          }
        </div>
      </div>
      <div class="footer__flex">
        <div class="footer-contact location">
          {
            data.address && (
              <>
                <PortableText data={data.address} />
                <h4 class="legal">Â© 2O24 legal</h4>
              </>
            )
          }
        </div>
      </div>
    </div>
    <div class="footer-logo"><Logotype /></div>
  </div>
  <div class="footer-bg-video">
    <video
      preload="metadata"
      autoplay="true"
      loop="true"
      muted="true"
      playsinline
    >
      <source
        src="https://woe-branding-assets.s3.us-east-2.amazonaws.com/30fps+-+Spinning+Clove+Icon+-Cropped.mp4"
        type="video/mp4"
        media="(min-width: 992px)"
      />
      <source
        src="https://woe-branding-assets.s3.us-east-2.amazonaws.com/Colour+Clover+-+Mobile.mp4"
        type="video/mp4"
      />
      Your browser does not support the video tag.
    </video>
  </div>
</footer>

<style lang="scss">
  .footer__wrapper {
    position: relative;
    overflow: hidden;
    /* min-height: 100vh; */
    z-index: 10;
  }
  .footer-content {
    position: relative;
    z-index: 1;
  }
  .footer__flex {
    width: var(--inner-width);
    margin: 0 auto;
    display: flex;
    justify-content: flex-end;
  }
  .footer-contact {
    width: 185px;
    margin-top: 10vh;
    color: var(--white);
  }
  .location {
    padding-top: 35vh;
  }
  .footer-contact-email {
    margin-bottom: 2rem;
    color: rgba(var(--rgb-white), 1);
    & a {
      text-decoration: underline;
      color: rgba(var(--rgb-white), 0.5);
    }
  }
  .footer-contact-item {
    margin-bottom: 1rem;
    display: flex;
    a {
      text-decoration: none;
      color: rgba(var(--rgb-white), 1);
    }
    & svg {
      margin-right: 1rem;
    }
  }
  .legal {
    margin-top: 2rem;
  }
  .footer-logo {
    margin: 2rem auto;
    margin-top: 4rem;
    width: var(--inner-width);
    display: grid;
    place-items: center;
    position: relative;
    & svg {
      width: 100%;
    }
  }
  .footer-bg-video {
    z-index: 0;
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    border: 1px solid red;
    width: 60vw;
    border: 1px solid transparent;
    height: auto;
    overflow: hidden;
    & video {
      overflow: hidden;
      position: relative;
      z-index: 1;
      width: 100%;
      height: 100%;
    }
  }
  @media (max-width: 992px) {
    .location {
      padding: 0;
    }
    .footer-contact {
      width: auto;
      height: 130px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    .footer-content {
      display: flex;
      flex-direction: column;
      margin: 1rem;
    }
    .footer-content-title {
      display: flex;
      justify-content: space-between;
      flex-direction: row-reverse;
    }
    .footer__flex {
      justify-content: flex-start;
    }
    .footer-logo {
      width: 100%;
      margin: 4rem auto;
    }
    .wrap-contact {
      display: flex;
      justify-content: flex-end;

      h4 {
        text-align: right;
      }
    }
    .footer-contact-item {
      /* justify-content: flex-end; */
      margin-bottom: 0.5;
      width: 100px;
      display: flex;
      justify-content: space-between;
      align-self: flex-end;
      svg {
        width: 14px;
        margin-top: -0.25rem;
        /* margin-right: 0; */
      }
    }
    .footer-contact-item:last-child {
      margin-bottom: 0;
    }
    .location {
      display: flex;
      justify-content: space-between;
      flex-direction: column;
    }
    .footer-bg-video {
      width: 100%;
    }
  }

  @media (max-width: 576px) {
    .footer-contact {
      height: 120px;
    }
  }
</style>
