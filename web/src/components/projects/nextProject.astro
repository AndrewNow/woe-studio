---
const { nextProjectData } = Astro.props;
const data = nextProjectData.projects;
---

<a class="next-project-video__wrapper" href=`/projects/${data.slug}`>
  <div class="next-project-title">
    <p>Next Project</p>
    <h3>{data.title}</h3>
  </div>
  <video
    class="next-project-media"
    preload="metadata"
    loop="true"
    muted="true"
    autoplay="true"
    playsinline
  >
    <source src={data.video} type="video/mp4" />
    Your browser does not support the video tag.
  </video>
  <div class="view-project-element">View project</div>
  <div class="view-project-background"></div>
</a>

<style>
  .next-project-video__wrapper {
    width: 100%;
    position: relative;
    margin: 4rem auto;
    display: block;
  }
  .next-project-title {
    position: absolute;
    top: 4rem;
    left: 4rem;
    color: var(--white);
  }
  .next-project-media {
    width: 100%;
    max-height: 90vh;
    object-fit: cover;
  }
  .view-project-element {
    display: none;
  }
  @media (max-width: 992px) {
    .next-project-video__wrapper {
      margin: 1rem auto;
    }
    .next-project-video__wrapper:after {
      content: "";
      z-index: 1;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 200px;
      background: linear-gradient(
        0deg,
        rgba(0, 0, 0, 0) 21.56%,
        rgba(0, 0, 0, 0.25) 48.54%,
        #000 100%
      );
    }
    .view-project-element {
      width: 70px;
      height: 70px;
      display: grid;
      place-items: center;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: white;
      border: 1px solid white;
      border-radius: 50%;
      z-index: 1;
    }
    .view-project-background {
      width: 70px;
      height: 70px;
      display: grid;
      place-items: center;
      position: absolute;
      z-index: 0;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: white;
      background: rgba(var(--rgb-white), 0.75);
      mix-blend-mode: difference;
      border-radius: 50%;
    }
