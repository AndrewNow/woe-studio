---
const { nextProjectData } = Astro.props;
const data = nextProjectData.projects;
---

<a class="next-project-video__wrapper" href=`/projects/${data.slug}`>
  <div class="sticky-gradient"></div>
  <div class="project-video__inner">
    <div class="next-project-title">
      <p>Next Project</p>
      <h3>{data.title}</h3>
    </div>
    <video
      class="next-project-media hover-area"
      data-hover-text="View project"
      preload="metadata"
      loop="true"
      muted="true"
      autoplay="true"
      playsinline
    >
      <source src={data.previewUrl} type="video/mp4" />
      Your browser does not support the video tag.
    </video>
    <div class="view-project-element">View project</div>
    <div class="view-project-background"></div>
  </div>
</a>

<style>
  .next-project-video__wrapper {
    width: 100%;
    height: 100vh;
    position: relative;
    margin: 4rem auto;
    display: block;
  }
  .sticky-gradient {
    z-index: 2;
    position: sticky;
    top: 0;
    left: 0;
    width: 100%;
    height: 200px;
    background: linear-gradient(
      0deg,
      rgba(0, 0, 0, 0) 10%,
      rgba(0, 0, 0, 0.1) 30%,
      #000 100%
    );
  }
  .project-video__inner {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: auto;
  }
  .next-project-title {
    position: absolute;
    z-index: 10;
    top: 4rem;
    left: 4rem;
    color: var(--white);
  }
  .next-project-media {
    width: 100%;
    max-height: 90vh;
    height: auto;
    object-fit: cover;
    cursor: none;
  }
  .view-project-element {
    display: none;
  }
  @media (max-width: 992px) {
    .next-project-video__wrapper {
      margin: 1rem auto;
      margin-bottom: 4rem;
      aspect-ratio: 16/10;
      height: auto;
      width: 100%;
    }
    .sticky-gradient {
      height: 100px;
    }
    .next-project-media {
      margin-top: 3rem;
    } 
    .next-project-video__wrapper:after {
      content: "";
      z-index: 1;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 200px;
      background: linear-gradient(
        0deg,
        rgba(0, 0, 0, 0) 21.56%,
        rgba(0, 0, 0, 0.25) 48.54%,
        #000 100%
      );
    }
    .view-project-element {
      width: 70px;
      height: 70px;
      display: grid;
      place-items: center;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: white;
      border: 1px solid white;
      border-radius: 50%;
      z-index: 1;
    }
    .view-project-background {
      width: 70px;
      height: 70px;
      display: grid;
      place-items: center;
      position: absolute;
      z-index: 0;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: white;
      background: rgba(var(--rgb-white), 0.75);
      mix-blend-mode: difference;
      border-radius: 50%;
    }
    /* .view-project-element:after {
      content: "test content";
      color: black;
      background: rgba(var(--rgb-white), 1);
      border: 2px solid red;
      mix-blend-mode: normal;
      width: calc(100% - 4px);
      height: calc(100% - 4px);
      position: absolute;
      z-index: 10;
      top: 0px;
      left: 0px;
      border-radius: 50%;
      display: grid;
      place-items: center;
    } */
    .next-project-title {
      top: 1rem;
      left: 1rem;
      z-index: 2;

      p {
        margin-bottom: 0.25rem;
      }
    }

    .next-project-media {
      height: auto;
    }
  }
</style>
