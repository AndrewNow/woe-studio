---
const { nextProjectData } = Astro.props;
const data = nextProjectData.projects;
---

<a class="next-project-video__wrapper" href=`/projects/${data.slug}`>
  <div class="sticky-gradient"></div>
  <div class="project-video__inner">
    <div class="next-project-title">
      <p>Next Project</p>
      <div class="project-title">
        <svg
          width="19"
          height="18"
          viewBox="0 0 19 18"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path d="M1 0V13.2191H18" stroke="#EFEDED"></path>
          <path
            d="M14.9082 9.44238L17.9991 13.2212L14.9082 17.0001"
            stroke="#EFEDED"></path>
          <h3>{data.title}</h3>
        </svg>
      </div>
    </div>
    <video
      class="next-project-media hover-area"
      data-hover-text="View project"
      preload="metadata"
      loop="true"
      muted="true"
      autoplay="true"
      playsinline
    >
      <source src={data.previewUrl} type="video/mp4" />
      Your browser does not support the video tag.
    </video>
    <div class="view-project-background"></div>
  </div>
</a>

<style>
  .project-title {
    display: inline-flex;
    margin-top: 1rem;
    align-items: flex-start;
    svg {
      margin-right: 1rem;
      margin-top: 0.25rem;
    }
  }
  .next-project-video__wrapper {
    width: 100%;
    height: 100vh;
    position: relative;
    margin: 4rem auto;
    display: block;
  }
  .sticky-gradient {
    z-index: 2;
    position: sticky;
    top: 0;
    left: 0;
    width: 100%;
    height: 200px;
    background: linear-gradient(
      0deg,
      rgba(0, 0, 0, 0) 10%,
      rgba(0, 0, 0, 0.1) 30%,
      #000 100%
    );
  }
  .project-video__inner {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: auto;
  }
  .next-project-title {
    position: absolute;
    z-index: 10;
    top: 4rem;
    left: 4rem;
    color: var(--white);
  }
  .next-project-media {
    width: 100%;
    max-height: 90vh;
    height: auto;
    object-fit: cover;
    cursor: none;
  }

  @media (max-width: 992px) {
    .next-project-video__wrapper {
      margin: 1rem auto;
      margin-bottom: 4rem;
      aspect-ratio: 16/10;
      height: auto;
      width: 100%;
    }
    .sticky-gradient {
      height: 100px;
    }
    .next-project-media {
      margin-top: 3rem;
    }
    .next-project-video__wrapper:after {
      content: "";
      z-index: 1;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 200px;
      background: linear-gradient(
        0deg,
        rgba(0, 0, 0, 0) 21.56%,
        rgba(0, 0, 0, 0.25) 48.54%,
        #000 100%
      );
    }
    .next-project-title {
      top: 1rem;
      left: 1rem;
      z-index: 2;

      p {
        margin-bottom: 0.25rem;
      }
    }

    .next-project-media {
      height: auto;
    }
  }

  @media (max-width: 768px) {
    .project-title {
      margin-top: .5rem;
      align-items: flex-start;
      svg {
        margin-right: .5rem;
        margin-top: -.25rem;
        width: 14px;
      }
    }
  }
</style>
