---
import VideoTimer from "./videoTimer.astro";
const { videoData } = Astro.props;
import CornerTopLeft from "./cornerPieces/cornerTopLeft.astro";
import CornerTopRight from "./cornerPieces/cornerTopRight.astro";
import CornerBottomRight from "./cornerPieces/cornerBottomRight.astro";
import CornerBottomLeft from "./cornerPieces/cornerBottomLeft.astro";
---

<div class="wrapper">
  <div class="video-container" id="hero-video-container">
    <CornerTopLeft />
    <CornerBottomLeft />
    {
      videoData.map((video, i) => {
        return (
          <video
            class="hero-video hover-area"
            preload="metadata"
            autoplay="true"
            loop="true"
            muted="true"
            id={`timer-video`}
            playsinline
          >
            <source src={video.src} type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        );
      })
    }
    <VideoTimer data={videoData} />
  </div>
  <div class="about-container" id="hero-about-container">
    <CornerTopRight />
    <CornerBottomRight />
    <a href="/about" class="link hero-link" data-value="View all projects">
      <p>About us</p>
    </a>
    <video
      class="about-video hover-area"
      preload="metadata"
      autoplay="true"
      loop="true"
      muted="true"
      playsinline
    >
      <source
        src="https://woe-branding-assets.s3.us-east-2.amazonaws.com/Wordmark+%2B+Spinning+Clove+Icon.mp4"
        type="video/mp4"
      />
      Your browser does not support the video tag.
    </video>
  </div>
</div>

<style>
  .wrapper {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100vh;
    display: flex;
    border-radius: 20px;
    gap: 0.5rem;
  }
  .hero-link {
    /* padding-right: 3rem; */
    position: absolute;
    z-index: 99;
    bottom: 3vh;
    left: 0;
    margin-left: 3vw;
  }

  .hover-area {
    overflow: hidden;
  }
  .video-container {
    flex: 0;
    margin: 1rem;
    margin-right: 0;
    height: auto;
    border-radius: 20px;
    overflow: hidden;
    position: relative;
  }
  .about-container {
    position: relative;
    flex: 1;
    margin: 1rem;
    margin-left: 0;
    height: auto;
    border-radius: 20px;
    overflow: hidden;
    width: 100%;
  }
  .hero-video {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
  }
  .about-video {
    position: relative;
    z-index: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
  }

  @media (max-width: 992px) {
    .wrapper {
      flex-direction: column;
      gap: 0;
    }
    .video-container, .about-container {
      width: calc(100% - 1rem);
      margin: 0.5rem auto;
      border-radius: 6px;
    }
    .video-container {
    }
    .about-container {
      margin-top: .5rem;
    }
    .hero-link {
      bottom: 0;
      top: 1rem;
      left: unset;
      right: 1rem;
    }
  }
</style>

<script>
  import { animate } from "motion";

  const videoContainer = document.getElementById("hero-video-container");
  const aboutContainer = document.getElementById("hero-about-container");

  document.querySelector("body").onload = () => {
    animate(
      videoContainer,
      {
        flex: 1.5,
      },
      {
        duration: 3,
        // delay: 2,
        // duration: 0,
      }
    );
  };
</script>
