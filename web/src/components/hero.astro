<style>
  .wrapper {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100vh;
    display: flex;
    border-radius: 20px;
    gap: 0.5rem;
  }
  .hero-link {
    /* padding-right: 3rem; */
    position: absolute;
    z-index: 99;
    bottom: 3vh;
    left: 0;
    margin-left: 3vw;
  }

  .hover-area {
    overflow: hidden;
  }
  .video-container {
    flex: 0;
    margin: 1rem;
    margin-right: 0;
    height: auto;
    border-radius: 20px;
    overflow: hidden;
    position: relative;
  }
  .about-container {
    position: relative;
    flex: 1;
    margin: 1rem;
    margin-left: 0;
    height: auto;
    border-radius: 20px;
    overflow: hidden;
    width: 100%;
  }
  .hero-video {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
  }
  .about-video {
    position: relative;
    z-index: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
  }

  @media (max-width: 992px) {
    .wrapper {
      flex-direction: column;
    }
  }
</style>

<script>
  import { animate } from "motion";

  const videoContainer = document.getElementById("hero-video-container");
  const aboutContainer = document.getElementById("hero-about-container");

  document.querySelector("body").onload = () => {
    animate(
      videoContainer,
      {
        flex: 1.5,
      },
      {
        duration: 3,
        // delay: 2,
        // duration: 0,
      }
    );
  };
</script>
