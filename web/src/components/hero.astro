---
import VideoTimer from "./videoTimer.astro";
import CornerTopLeft from "./cornerPieces/cornerTopLeft.astro";
import CornerTopRight from "./cornerPieces/cornerTopRight.astro";
import CornerBottomRight from "./cornerPieces/cornerBottomRight.astro";
import CornerBottomLeft from "./cornerPieces/cornerBottomLeft.astro";

const { data } = Astro.props;
---

<div class="wrapper">
  <div class="video-container" id="hero-video-container">
    <CornerTopLeft />
    <CornerTopRight />
    <CornerBottomLeft />
    <CornerBottomRight />
    {
      data.map((video, i) => {
        return (
          <video
            class="hero-video hover-area"
            preload="metadata"
            autoplay="true"
            loop="true"
            muted="true"
            id={`timer-video`}
            playsinline
          >
            <source src={video.previewUrl} type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        );
      })
    }
    <VideoTimer data={data} />
  </div>
</div>

<style>
  .wrapper {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100vh;
    display: flex;
    border-radius: 20px;
    gap: 0.5rem;
  }
  .hero-link {
    /* padding-right: 3rem; */
    position: absolute;
    z-index: 99;
    bottom: 3vh;
    left: 0;
    margin-left: 3vw;
  }

  .hover-area {
    overflow: hidden;
  }
  .video-container {
    width: 100%;
    margin: 1rem;
    height: auto;
    border-radius: 20px;
    overflow: hidden;
    position: relative;
  }
  .about-container {
    position: relative;
    margin: 1rem;
    margin-left: 0;
    height: auto;
    border-radius: 20px;
    overflow: hidden;
    width: 100%;
  }
  .hero-video {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
  }
  .about-video {
    position: relative;
    z-index: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
  }

  @media (max-width: 992px) {
    .wrapper {
      flex-direction: column;
      gap: 0;
    }
    .video-container,
    .about-container {
      width: calc(100% - 1rem);
      margin: 0.5rem;
      border-radius: 6px;
      height: 100%;
    }
    .video-container {
    }
    .about-container {
      margin-top: 0.5rem;
    }
    .hero-link {
      bottom: 0;
      top: 1rem;
      left: unset;
      right: 1rem;
    }
  }
</style>

